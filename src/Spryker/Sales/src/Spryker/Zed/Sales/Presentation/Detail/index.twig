{% extends '@Sales/Layout/layout.twig' %}

{% block section_title %}
    {{ 'Order ID:' | trans }} {{ order.idSalesOrder }} ({{ order.createdAt | formatDateTime }})
{% endblock %}

{% block action %}

    {{ viewActionButton(url('/sales/detail/invoice', {'id-sales-order': order.idSalesOrder}), 'View invoice' | trans) }}

{% endblock %}

{% block content %}

    <div id="order-overview">{% include '@Sales/Detail/boxes/order-overview.twig' %}</div>
    <div id="items">{% include '@Sales/Detail/boxes/items.twig' %}</div>

    {% include '@Sales/Detail/boxes/totals.twig' %}

    {% for blockName, externalBlock in blocks %}
    <div id="{{ blockName }}">{{ externalBlock | raw }}</div>
    {% endfor %}

    <div id="address">{% include '@Sales/Detail/boxes/addresses.twig' %}</div>

{% endblock %}

{% block head_css %}
    {{ parent() }}
    <link rel="stylesheet" href="/assets/css/spryker-zed-sales-main.css">
{% endblock %}
