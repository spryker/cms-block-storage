{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Edit a Glossary key' %}

{% block head_title widget_title %}
{% block section_title widget_title %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_header_content %}

            <a href="/cms/glossary/?id-page={{ idPage }}" class="btn btn-sm btn-default">{{ 'Back to CMS page' | trans }}</a>

        {% endblock %}

        {% block widget_content %}

            {{ form_start(form) }}

                {{ form_widget(form) }}

                <input type="submit" class="btn btn-primary" value="{{ 'Save' | trans }}" />

            {{ form_end(form) }}

        {% endblock %}

    {% endembed %}

{% endblock %}
