
{% extends '@Gui/Layout/layout.twig' %}

{% block section_title 'Detail Availability' | trans %}

{% block action %}
    {{ backActionButton('/availability', 'List of Product Abstract Availability' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' with { widget_title: 'Product Abstract Availability Overview' } %}
        {% block widget_content %}
            <div class="row">
                <div class="col-lg-2">
                    <p><b>{{ 'SKU' | trans }}</b></p><p> {{ productAbstractInfo.sku }}</p>
                </div>
                <div class="col-lg-2">
                    <p><b>{{ 'Name' | trans }}:</b></p><p> {{ productAbstractInfo.productName }}</p>
                </div>
                <div class="col-lg-2">
                    <p><b>{{ 'Availability' | trans }}:</b></p><p> {{ productAbstractInfo.availability }}</p>
                </div>
                <div class="col-lg-2">
                    <p><b>{{ 'Current Stock' | trans }}:</b></p><p> {{ productAbstractInfo.stockQuantity }}</p>
                </div>
                <div class="col-lg-2">
                    <p><b>{{ 'Reservation' | trans }}:</b></p><p> {{ productAbstractInfo.reservationQuantity }}</p>
                </div>
            </div>

        {% endblock %}
    {% endembed %}

    {% embed '@Gui/Partials/widget.twig' with { widget_title: 'Product Availability list' | trans } %}

        {% block widget_content %}
            {{ indexTable | raw }}
        {% endblock %}

    {% endembed %}

{% endblock %}
