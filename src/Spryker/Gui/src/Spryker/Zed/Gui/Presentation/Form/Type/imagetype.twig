{% block image_widget %}
    {% set css = 'spryker-form-image' %}
    {% set img_width = '' %}
    {% set img_height = '' %}

    {% if form.vars.width is defined and form.vars.width %}
        {% set img_width = 'width="' ~ form.vars.width ~ '"' %}
    {% endif %}

    {% if form.vars.height is defined and form.vars.height %}
        {% set img_height = 'height="' ~ form.vars.height  ~ '"' %}
    {% endif %}

    {% set form_group_errors_css = '' %}
    {% if form.vars.attr.class is defined %}
        {% set css = form.vars.attr.class ~ ' ' ~ css %}
    {% endif %}

    {% if form.vars.errors|length %}
        {% set form_group_errors_css = 'has-error' %}
    {% endif %}

    <div class='form-group {{ form_group_errors_css }}'>
        <img src="{{ form.vars.value }}" {{ img_width|raw }} {{ img_height|raw }} class="{{ css }}" />
        {{ form_label(form) }}
        {{ form_errors(form) }}
    </div>
{% endblock image_widget %}