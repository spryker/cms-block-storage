{% embed '@Gui/Partials/widget.twig' with { widget_title: 'Price & Taxes' } %}
    {% block widget_content %}

        <div class="row">
            <div class="col-xs-6">
                <div class="row">
                    <div class="col-xs-2"><b>{{ 'Price' | trans }}</b></div>
                    <div class="col-xs-10">{{ currentProduct.price.price | money }}</div>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="row">
                    <div class="col-xs-2"><b>{{ 'Tax Set' | trans }}</b></div>
                    <div class="col-xs-10">{{ taxSet.name }}</div>
                </div>
            </div>
        </div>

    {% endblock %}
{% endembed %}
