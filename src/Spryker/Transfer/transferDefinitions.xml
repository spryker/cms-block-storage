<?xml version="1.0"?>
<transfers xmlns="http://xsd.spryker.com"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://xsd.spryker.com ../../src/Spryker/TransferObjectDefinitionSchema.xsd">

    <transfer name="Discount">
        <interface>SprykerFeature\Shared\Discount\Dependency\Transfer\DiscountItemInterface</interface>
        <property name="salesruleId" type="int" default="null" />
        <property name="displayName" type="string" default="null" />
        <property name="amount" type="int" default="0" />
        <property name="type" type="string" default="null" />
        <property name="action" type="string" default="null" />
        <property name="scope" type="string" default="null" />
    </transfer>
    <transfer name="DiscountTotals">
        <interface>SprykerFeature\Shared\Calculation\Dependency\Transfer\DiscountTotalsInterface</interface>
        <property name="totalAmount" type="int" default="0" />
        <property name="discountItems" type="Calculation\DiscountTotalItemCollection" />
    </transfer>
    <transfer name="Expense">
        <interface>SprykerFeature\Shared\Calculation\Dependency\Transfer\ExpenseItemInterface</interface>
        <interface>SprykerFeature\Shared\Discount\Dependency\Transfer\DiscountableExpenseInterface</interface>
        <property name="type" type="string" value="null" />
        <property name="grossPrice" type="int" value="null" />
        <property name="priceToPay" type="int" value="null" />
        <property name="taxPercentage" type="int" value="null" />
        <property name="name" type="string" value="null" />
    </transfer>
    <transfer name="ExpenseTotals">
        <interface>SprykerFeature\Shared\Calculation\Dependency\Transfer\ExpenseTotalsInterface</interface>
        <property name="totalOrderAmount" type="int" value="0" />
        <property name="totalItemAmount" type="int" value="0" />
        <property name="totalAmount" type="int" value="0" />
        <property name="expenseItems" type="Calculation\\ExpenseTotalItemCollection" />
    </transfer>
    <transfer name="Tax">
        <interface>SprykerFeature\Shared\Calculation\Dependency\Transfer\TaxInterface</interface>
        <property name="totalAmount" type="int" value="0" />
        <property name="taxRates" type="Calculation\\TaxItemCollection" />
    </transfer>
    <transfer name="TaxItem">
        <interface>SprykerFeature\Shared\\Dependency\Transfer\TaxInterface</interface>
        <property name="percentage" type="float" value="0.0" />
        <property name="amount" type="int" value="0" />
    </transfer>
    <transfer name="Totals">
        <interface>SprykerFeature\Shared\Calculation\Dependency\Transfer\TotalsInterface</interface>
        <property name="subtotal" type="int" value="0" />
        <property name="subtotalWithoutItemExpenses" type="int" value="0" />
        <property name="expenses" type="Calculation\\ExpenseTotals" />
        <property name="discount" type="Calculation\\DiscountTotals" />
        <property name="tax" type="Calculation\\Tax" />
        <property name="grandTotalWithDiscounts" type="int" value="0" />
        <property name="grandTotal" type="int" value="0" />
    </transfer>

</transfers>
