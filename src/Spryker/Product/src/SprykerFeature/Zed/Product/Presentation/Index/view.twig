{% extends '@Gui/Layout/layout.twig' %}

{% set section_title = 'Products List (Mock Data)' %}

{% block breadcrumb %}
    <li><a href="/product">{{ 'Products List' | trans }}</a></li>
    <li><a href="/product/index/view">{{ 'Product Details' | trans }} {{ abstractProduct.sku }}</a></li>
{% endblock %}

{% block content %}

    <div class="ibox product-detail">
        <div class="ibox-content">

            <div class="row">
                <div class="col-md-12">

                    <h2 class="font-bold m-b-xs">{{ attributes.name }}</h2>

                    <table class="table small m-t-sm">
                    {% for name, productAttribute in attributes.attributes %}
                        {% if productAttribute is not iterable %}
                        <tr>
                            <td>{{ name }}</td>
                            <td>{{ productAttribute }}</td>
                        </tr>
                        {% endif %}
                    {% endfor %}
                    </table>

                </div>
            </div>

        </div>
    </div>

    <h2>Concrete products</h2>

    <div class="row">
        {% for product in concreteProducts %}
        <div class="col-md-6">
            <div class="ibox product-view">
                <div class="ibox-content product-box">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="product-title">
                                <a class="product-name" href="#">{{ product.sku }}</a>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="product-desc">
                                <table class="table small m-t-sm">
                                    <caption>Product details</caption>
                                    <tr>
                                        <td>Status</td>
                                        <td>{{ product.isActive }}</td>
                                    </tr>
                                    <tr>
                                        <td>Type</td>
                                        <td>{{ product.type }}</td>
                                    </tr>
                                    <tr>
                                        <td>Format</td>
                                        <td>{{ product.format }}</td>
                                    </tr>
                                    <tr>
                                        <td>Wight</td>
                                        <td>{{ product.weight }}</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="product-desc">
                                <table class="table small m-t-sm">
                                    <caption>Product Options</caption>
                                    {% for i in range(1,9) %}
                                    <tr>
                                        <td>Option {{ i }}</td>
                                        <td>Option Value {{ i }}</td>
                                    </tr>
                                    {% endfor %}
                                </table>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="product-desc">
                                <table class="table small m-t-sm">
                                    <caption>Price List</caption>
                                    <tr>
                                        <td>1</td>
                                        <td>{{ 540 | currency }}</td>
                                    </tr>
                                    <tr>
                                        <td>10</td>
                                        <td>{{ 490 | currency }}</td>
                                    </tr>
                                    <tr>
                                        <td>20</td>
                                        <td>{{ 410 | currency }}</td>
                                    </tr>
                                    <tr>
                                        <td>50</td>
                                        <td>{{ 350 | currency }}</td>
                                    </tr>
                                    <tr>
                                        <td>100</td>
                                        <td>{{ 200 | currency }}</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        {% endfor %}
    </div>

{% endblock %}
