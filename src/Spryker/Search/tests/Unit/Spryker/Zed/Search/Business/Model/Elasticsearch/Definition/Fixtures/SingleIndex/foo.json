      "analyzer": {
        "my_analyzer": {
          "type": "standard",
          "stopwords": "_german_",
          "filter": ["standard", "lowercase"]
        }
      }
    }
  },
  "mappings": {
    "page1": {
      "properties": {
        "foo": {
