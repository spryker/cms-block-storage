<?xml version="1.0"?>
<transfers xmlns="http://xsd.spryker.com"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://xsd.spryker.com ../../src/Spryker/TransferObjectDefinitionSchema.xsd">

    <transfer name="PayoneAuthorization">
        <interface name="SprykerFeature\Shared\Payone\Dependency\Transfer\AuthorizationDataInterface" />
        <property name="amount" type="int" />
        <property name="referenceId" type="string" />
        <property name="paymentMethod" type="string" />
        <property name="paymentUserData" type="PaymentUserData" />
        <property name="order" type="string" /> <!-- @todo: Order Interface here -->
    </transfer>

    <transfer name="PayoneCapture">
        <interface name="SprykerFeature\Shared\Payone\Dependency\Transfer\CaptureDataInterface" />
        <property name="amount" type="int" />
        <property name="payment" type="Paymente" />
    </transfer>

    <transfer name="PayoneDebit">
        <interface name="SprykerFeature\Shared\Payone\Dependency\Transfer\DebitDataInterface" />
        <property name="amount" type="int" />
        <property name="payment" type="Payment" />
    </transfer>

    <transfer name="PayoneRefund">
        <interface name="SprykerFeature\Shared\Payone\Dependency\Transfer\RefundDataInterface" />
        <property name="amount" type="int" />
        <property name="payment" type="Payment" />
    </transfer>

    <transfer name="PayonePayment">
        <interface name="SprykerFeature\Shared\Payone\Dependency\Transfer\PaymentInterface" />
        <property name="paymentMethod" type="string" />
        <property name="authorizationType" type="string" />
        <property name="transactionId" type="string" />
    </transfer>

    <transfer name="PayoneStandardParameter">
        <interface name="SprykerFeature\Shared\Payone\Dependency\Transfer\StandardParameterInterface" />
        <property name="encoding" type="string" />
        <property name="mid" type="string" />
        <property name="aid" type="string" />
        <property name="portalId" type="string" />
        <property name="key" type="string" />
        <property name="paymentGatewayUrl" type="string" />
        <property name="currency" type="string" />
        <property name="language" type="string" />
        <property name="redirectSuccessUrl" type="string" />
        <property name="redirectBackUrl" type="string" />
        <property name="redirectErrorUrl" type="string" />
    </transfer>

    <transfer name="PayoneApiCallResponseCheck">
        <interface name="SprykerFeature\Shared\Payone\Dependency\Transfer\ApiCallResponseCheckInterface" />
        <property name="requestType" type="string" />
        <property name="payment" type="Payment" />
    </transfer>

    <transfer name="PayoneAuthorizationCheckResponse">
        <interface name="SprykerFeature\Shared\Payone\Dependency\Transfer\AuthorizationCheckResponseInterface" />
        <property name="isSuccess" type="bool" />
        <property name="request" type="string" />
        <property name="status" type="string" />
        <property name="redirectUrl" type="string" />
        <property name="isRedirect" type="string" />
        <property name="internalErrorMessage" type="string" />
        <property name="customerErrorMessage" type="string" />
        <property name="errorCode" type="string" />
    </transfer>

</transfers>
