{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Product Attributes' %}
{% block section_title %}{{ widget_title }}{% endblock %}

{% block action %}
    {{ backActionButton(url('/product-management/attributes'), 'Back to List' | trans) }}
    {{ editActionButton(url('/product-management/attributes/edit', {'id': app.request.query.get('id')}), 'Edit' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' with { widget_title: 'Create Attribute' } %}
        {% block widget_content %}

            <div class="tabs-container">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#tab_general" data-toggle="tab">{{ '1. General Information' | trans }}</a></li>
                    <li class=""><a href="#tab_translation" data-toggle="tab">{{ '2. Translations' | trans }}</a></li>
                </ul>

                <div class="tab-content">

                    <div id="tab_general" class="tab-pane active">
                        <div class="panel-body">
                            {{ form_start(attributeForm) }}

                            <div class="well">
                                {% include '@ProductManagement/Attributes/partials/attribute-form-content.twig' with {'form': attributeForm, 'readOnly': true} %}
                            </div>

                            {{ form_end(attributeForm) }}
                        </div>
                    </div>

                    <div id="tab_translation" class="tab-pane">
                        <div class="panel-body">

                            {{ form_start(attributeTranslationFormCollection) }}

                            {% include '@ProductManagement/Attributes/partials/translate-form-content.twig' with {'form': attributeTranslationFormCollection, 'readOnly': true} %}

                            {{ form_end(attributeTranslationFormCollection) }}

                        </div>
                    </div>
                </div>
            </div>

        {% endblock %}
    {% endembed %}

{% endblock %}

{% block footer_js %}
    {{ parent() }}
    <script src="/assets/js/spryker-zed-productmanagement-attributes.js"></script>
{% endblock %}
