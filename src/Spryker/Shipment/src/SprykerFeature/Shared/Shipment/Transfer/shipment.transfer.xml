<?xml version="1.0"?>
<transfers xmlns="http://xsd.spryker.com"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://xsd.spryker.com ../../src/Spryker/TransferObjectDefinitionSchema.xsd">

    <transfer name="Shipment">
        <property name="methods" type="ShipmentMethod[]" singular="method" />
    </transfer>

    <transfer name="ShipmentCarrier">
        <property name="idShipmentCarrier" type="int" />
        <property name="glossaryKeyName" type="int" />
        <property name="name" type="string" />
        <property name="isActive" type="bool" />
    </transfer>

    <transfer name="ShipmentMethod">
        <property name="idShipmentMethod" type="int" />
        <property name="fkShipmentCarrier" type="int" />
        <property name="glossaryKeyName" type="string" />
        <property name="glossaryKeyDescription" type="string" />
        <property name="availabilityPlugin" type="string" />
        <property name="priceCalculationPlugin" type="string" />
        <property name="deliveryTimePlugin" type="string" />
        <property name="name" type="string" />
        <property name="price" type="int" />
        <property name="isActive" type="bool" />
        <property name="time" type="int" />
    </transfer>

    <transfer name="Order">
        <property name="shipmentMethod" type="ShipmentMethod" singular="shipmentMethod" />
        <property name="shipmentDeliveryTime" type="int" />
    </transfer>

    <transfer name="CheckoutRequest">
        <property name="shipmentMethod" type="ShipmentMethod" singular="shipmentMethod" />
    </transfer>

</transfers>
