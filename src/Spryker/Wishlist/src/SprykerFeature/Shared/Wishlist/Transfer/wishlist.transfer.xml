<?xml version="1.0"?>
<transfers xmlns="http://xsd.spryker.com"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://xsd.spryker.com ../../src/Spryker/TransferObjectDefinitionSchema.xsd">

    <transfer name="Wishlist">
        <property name="customer" type="Customer" />
        <property name="items" type="WishlistItem[]" singular="item" />
    </transfer>

    <transfer name="WishlistChange">
        <property name="customer" type="Customer" />
        <property name="wishlist" type="Wishlist" />
        <property name="items" type="WishlistItem[]" singular="item" />
        <property name="addedItems" type="WishlistItem[]" singular="item" />
        <property name="removedItems" type="WishlistItem[]" singular="item" />
    </transfer>

    <transfer name="WishlistProduct">
        <property name="concreteSku" type="string"/>
        <property name="abstractSku" type="string"/>
    </transfer>

    <transfer name="WishlistItem">
        <property name="id" type="int"/>
        <property name="addedAt" type="string"/>
        <property name="product" type="WishlistProduct"/>
        <property name="quantity" type="int"/>
        <property name="group_key" type="string" />
        <property name="concrete_sku" type="string" />
        <property name="abstract_sku" type="string" />
        <property name="options" type="OrderItemOption[]" singular="option" />
    </transfer>
</transfers>
