<?xml version="1.0"?>
<transfers xmlns="http://xsd.spryker.com"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://xsd.spryker.com ../../src/Spryker/TransferObjectDefinitionSchema.xsd">

    <transfer name="PayoneAuthorization">
        <!-- DUMMY -->
        <use name="SprykerFeature\Shared\Payone\Dependency\Transfer\AuthorizationDataInterface" short="AuthorizationDataInterface" />
        <interface name="SprykerFeature\Shared\Payone\Dependency\Transfer\AuthorizationDataInterface" short="AuthorizationDataInterface" />
        <property name="amount" type="int" default="null" />
        <property name="referenceId" type="string" default="" />
        <!-- <property name="order" type="SalesOrderTransfer" />--> <!-- requires sales package refactoring -->
        <!-- <property name="paymentFormData" type="string" default="" /> -->
    </transfer>

    <transfer name="PayoneCapture">
        <!-- DUMMY -->
        <use name="SprykerFeature\Shared\Payone\Dependency\Transfer\CaptureDataInterface" short="CaptureDataInterface" />
        <interface name="SprykerFeature\Shared\Payone\Dependency\Transfer\CaptureDataInterface" short="CaptureDataInterface" />
        <property name="amount" type="int" default="null" />
    </transfer>

    <transfer name="PayoneDebit">
        <!-- DUMMY -->
        <use name="SprykerFeature\Shared\Payone\Dependency\Transfer\DebitDataInterface" short="DebitDataInterface" />
        <interface name="SprykerFeature\Shared\Payone\Dependency\Transfer\DebitDataInterface" short="DebitDataInterface" />
        <property name="amount" type="int" default="null" />
    </transfer>

    <transfer name="PayoneRefund">
        <!-- DUMMY -->
        <use name="SprykerFeature\Shared\Payone\Dependency\Transfer\RefundDataInterface" short="RefundDataInterface" />
        <interface name="SprykerFeature\Shared\Payone\Dependency\Transfer\RefundDataInterface" short="RefundDataInterface" />
        <property name="amount" type="int" default="null" />
    </transfer>

    <transfer name="PayonePayment">
        <!-- DUMMY -->
        <use name="SprykerFeature\Shared\Payone\Dependency\Transfer\PaymentInterface" short="PaymentInterface" />
        <interface name="SprykerFeature\Shared\Payone\Dependency\Transfer\PaymentInterface" short="PaymentInterface" />
        <property name="paymentMethod" type="string" default="null" />
        <property name="transactionId" type="string" default="null" />
    </transfer>

    <transfer name="PayoneApiCallResponseCheck">
        <!-- DUMMY -->
        <use name="SprykerFeature\Shared\Payone\Dependency\Transfer\ApiCallResponseCheckInterface" short="ApiCallResponseCheckInterface" />
        <use name="SprykerFeature\Shared\Payone\Dependency\Transfer\PaymentInterface" short="PaymentInterface" />
        <interface name="SprykerFeature\Shared\Payone\Dependency\Transfer\ApiCallResponseCheckInterface" short="ApiCallResponseCheckInterface" />
        <property name="requestType" type="string" default="null" />
    </transfer>

</transfers>
