<?xml version="1.0" encoding="UTF-8"?>
<config>
    <product>
        <pages>
            <products>
                <label>Products</label>
                <title>Products</title>
                <bundle>product-management</bundle>
                <controller>index</controller>
                <action>index</action>
                <pages>
                    <product-create>
                        <label>Create a Product</label>
                        <title>Create a Product</title>
                        <bundle>product-management</bundle>
                        <controller>add</controller>
                        <action>index</action>
                        <visible>0</visible>
                    </product-create>

                    <product-view>
                        <label>View Product</label>
                        <title>View Product</title>
                        <bundle>product-management</bundle>
                        <controller>view</controller>
                        <action>index</action>
                        <visible>0</visible>
                    </product-view>

                    <product-edit>
                        <label>Edit Product</label>
                        <title>Edit Product</title>
                        <bundle>product-management</bundle>
                        <controller>edit</controller>
                        <action>index</action>
                        <visible>0</visible>
                    </product-edit>
                </pages>
            </products>
            <attributes>
                <label>Attributes</label>
                <title>Attributes</title>
                <bundle>product-management</bundle>
                <controller>attribute</controller>
                <action>index</action>
                <pages>
                    <attribute-create>
                        <label>Create a Product Attribute</label>
                        <title>Create a ProductAttribute</title>
                        <bundle>product-management</bundle>
                        <controller>attribute</controller>
                        <action>create</action>
                        <visible>0</visible>
                    </attribute-create>

                    <attribute-view>
                        <label>View Product Attribute</label>
                        <title>View Product Attribute</title>
                        <bundle>product-management</bundle>
                        <controller>attribute</controller>
                        <action>view</action>
                        <visible>0</visible>
                    </attribute-view>

                    <attribute-edit>
                        <label>Edit Product Attribute</label>
                        <title>Edit Product Attribute</title>
                        <bundle>product-management</bundle>
                        <controller>attribute</controller>
                        <action>edit</action>
                        <visible>0</visible>
                    </attribute-edit>
                </pages>
            </attributes>
        </pages>
    </product>
</config>
