<?xml version="1.0"?>
<database
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    name="zed"
    namespace="Orm\Zed\ProductLabel\Persistence"
    package="src.Orm.Zed.ProductLabel.Persistence"
    xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
>
    <table name="spy_product_label_product_abstract">
        <column name="fk_product_label" type="INTEGER" required="true" primaryKey="true"/>
        <column name="fk_product_abstract" type="INTEGER" required="true" primaryKey="true"/>

        <foreign-key
            name="spy_product_label_product_abstract-fk_product_label"
            foreignTable="spy_product_label"
            phpName="SpyProductLabel"
            refPhpName="SpyProductLabelProductAbstract"
        >
            <reference local="fk_product_label" foreign="id_product_label"/>
        </foreign-key>

        <foreign-key
            name="spy_product_label_product_abstract-fk_product_abstract"
            foreignTable="spy_product_abstract"
            phpName="SpyProductAbstract"
            refPhpName="SpyProductLabel"
        >
            <reference local="fk_product_abstract" foreign="id_product_abstract"/>
        </foreign-key>
    </table>
</database>
