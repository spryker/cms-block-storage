<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:noNamespaceSchemaLocation="http://xsd.propelorm.org/1.6/database.xsd" namespace="Orm\Zed\Auth\Persistence" package="src.Orm.Zed.Auth.Persistence">

    <table name="spy_auth_reset_password" idMethod="native" phpName="SpyResetPassword">
        <column name="id_auth_reset_password" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="fk_user" type="integer" primaryKey="true"/>
        <column name="code" required="true" size="35" type="VARCHAR"/>
        <column name="status" required="true" size="10" type="ENUM" valueSet="active,expired,used"/>
        <unique>
            <unique-column name="code"/>
        </unique>
        <behavior name="timestampable"/>
        <behavior name="archivable"/>
        <foreign-key foreignTable="spy_user" phpName="User" refPhpName="User" onDelete="CASCADE">
            <reference foreign="id_user" local="fk_user"/>
        </foreign-key>
    <id-method-parameter value="spy_auth_reset_password_pk_seq"/></table>

</database>
