<?xml version="1.0"?>
<transfer
    xmlns="http://xsd.spryker.com"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xsd.spryker.com ../../src/Spryker/TransferObjectDefinitionSchema.xsd"
>
    <transfer name="BraintreePayment">
        <property name="fkSalesOrder" type="int" />
        <property name="accountBrand" type="string" />
        <property name="paymentType" type="string" />
        <property name="clientIp" type="string" />
        <property name="email" type="string"/>
        <property name="dateOfBirth" type="string"/>
        <property name="languageIso2Code" type="string"/>
        <property name="currencyIso3Code" type="string"/>
        <property name="address" type="Address"/>
        <property name="nonce" type="string"/>
        <property name="transactionId" type="string"/>
        <property name="bankAccountHolder" type="string"/>
        <property name="bankAccountBic" type="string"/>
        <property name="bankAccountIban" type="string"/>
    </transfer>

    <transfer name="BraintreeTransactionResponse">
        <property name="transactionId" type="string"/>
        <property name="isSuccess" type="bool"/>
        <property name="code" type="int"/>
        <property name="message" type="string"/>
        <property name="paymentType" type="string" />
        <property name="transactionStatus" type="string"/>
        <property name="transactionType" type="string"/>
        <property name="transactionAmount" type="string"/>
        <property name="processingTimestamp" type="integer"/>

        <property name="merchantAccount" type="string"/>
        <property name="creditCardType" type="string"/>
        <property name="paypalPayerEmail" type="string"/>
    </transfer>

    <transfer name="BraintreeCalculationResponse">
        <property name="version" type="string"/>
        <property name="transactionType" type="string"/>
        <property name="paymentType" type="string"/>
        <property name="identificationTransactionid" type="string"/>
        <property name="identificationUniqueid" type="string"/>
        <property name="status" type="string"/>
        <property name="statusCode" type="string"/>
        <property name="description" type="string"/>
        <property name="paymentDetails" type="BraintreeCalculationPaymentDetail[]" singular="paymentDetail"/>
        <property name="tacUrl" type="string"/>
        <property name="dataPrivacyConsentUrl" type="string"/>
        <property name="totalsAmountHash" type="string"/>
    </transfer>

    <transfer name="BraintreeCalculationPaymentDetail">
        <property name="originalAmount" type="int"/>
        <property name="totalAmount" type="int"/>
        <property name="duration" type="int"/>
        <property name="interestRate" type="int"/>
        <property name="effectiveInterestRate" type="int"/>
        <property name="usage" type="string"/>
        <property name="currency" type="string"/>
        <property name="standardCreditInformationUrl" type="string"/>
    </transfer>

    <transfer name="Order">
        <property name="idSalesOrder" type="int" />
        <property name="braintreePayment" type="BraintreePayment"/>
        <property name="items" type="Item[]" singular="item"/>
    </transfer>

    <transfer name="Item">
        <property name="idSalesOrderItem" type="int"/>
    </transfer>

    <transfer name="Payment">
        <property name="braintree" type="BraintreePayment"/>
    </transfer>
</transfer>
