<?xml version="1.0"?>
<transfers xmlns="http://xsd.spryker.com"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://xsd.spryker.com ../../src/Spryker/TransferObjectDefinitionSchema.xsd">

    <transfer name="CartCartChange">
        <use name="Generated\Shared\Transfer\CartCartItemTransfer" />
        <property name="changedCartItems" type="CartCartItemTransfer" collection="CartCartItemTransfer" />
        <property name="couponCode" type="string" default="null" />
        <property name="order" type="SalesOrderTransfer" collection="SalesOrderTransfer" />
        <property name="userId" type="string" default="null" />
        <property name="cartHash" type="string" default="null" />
        <property name="deleteReason" type="string" default="null" />
        <property name="isMerged" type="string" default="null" />
    </transfer>
    <transfer name="CartCartItem">

        <use name="SprykerFeature\Shared\Cart2\Transfer\ItemInterface" />
        <use name="SprykerFeature\Shared\Cart2\Transfer\ItemCollectionInterface" />

        <interface name="ItemInterface" />
        <interface name="ItemCollectionInterface" />

        <property name="id" type="int" default="null" />
        <property name="sku" type="string" default="null" />
        <property name="uniqueIdentifier" type="string" default="null" />
        <property name="options" type="array" default="[]" />
        <property name="quantity" type="string" default="null" />
    </transfer>
    <transfer name="CartStepStorage">
        <property name="userId" type="string" default="null" />
        <property name="stepName" type="string" default="null" />
        <property name="isSuccess" type="string" default="null" />
    </transfer>

</transfers>

