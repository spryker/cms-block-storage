<?xml version="1.0"?>
<transfers xmlns="http://xsd.spryker.com"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://xsd.spryker.com ../../src/Spryker/TransferObjectDefinitionSchema.xsd">

    <transfer name="Cart">
        <property name="items" type="CartItem[]" singular="item" />
        <property name="totals" type="Totals" />
        <property name="expenses" type="Expense[]" singular="expense" />
        <property name="discounts" type="Discount[]" singular="discount" />
        <property name="couponCodes" type="array" singular="couponCode" />
    </transfer>

    <transfer name="Change">
        <property name="items" type="CartItem[]" singular="item" />
        <property name="couponCode" type="string" />
        <property name="cart" type="Cart" />
        <property name="order" type="Order" />
        <property name="userId" type="string" />
        <property name="cartHash" type="string" />
        <property name="deleteReason" type="string" />
        <property name="isMerged" type="string" />
    </transfer>

    <transfer name="CartItem">
        <property name="id" type="int" />
        <property name="sku" type="string" />
        <property name="abstractSku" type="string" />
        <property name="uniqueIdentifier" type="string" />
        <property name="name" type="string" />
        <property name="options" type="OrderItemOption[]" singular="option" />
        <property name="quantity" type="int" />
        <property name="grossPrice" type="int" />
        <property name="priceToPay" type="int" />
        <property name="taxSet" type="TaxSet" />
        <property name="expenses" type="Expense[]" singular="expense" />
        <property name="discounts" type="Discount[]"  singular="discount" />
    </transfer>

    <transfer name="StepStorage">
        <property name="userId" type="string" />
        <property name="stepName" type="string" />
        <property name="isSuccess" type="string" />
    </transfer>

</transfers>

