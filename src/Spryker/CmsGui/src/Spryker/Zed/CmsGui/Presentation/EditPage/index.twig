{% extends '@Cms/Layout/layout.twig' %}

{% set widget_title = 'Edit Cms page' | trans %}

{% block head_title widget_title %}
{% block section_title widget_title %}

{% block action %}
    {% set redirectUrl = url('/cms-gui/edit-page', {'id-cms-page' : cmsPage.fkPage}) %}
    {{ include ('@CmsGui/_template/activate-button.twig', { 'cmsPage': cmsPage}) }}

    {{ editActionButton(url('/cms-gui/create-glossary', {'id-cms-page': cmsPage.fkPage}), 'Edit placeholders' | trans) }}

    {{ backActionButton('/cms-gui/list-page', 'Back to CMS' | trans) }}
{% endblock %}

