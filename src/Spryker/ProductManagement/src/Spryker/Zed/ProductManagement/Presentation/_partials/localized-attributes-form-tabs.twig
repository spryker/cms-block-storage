<div class="tab-content">
    {% for localeCode in localeCollection %}
        {% set formKey = formPrefix ~ '_' ~ localeCode %}
        {% set activeCss = '' %}

        {% if currentLocale == localeCode %}
            {% set activeCss =  'active' %}
        {% endif %}

        <div id="content_attribute_abstract_{{ localeCode }}" class="tab-pane {{ activeCss }}">
            <div class="panel-body">
                <div class="well">
                    <div class="row" style="padding-right: 20px !important;">
                        {% for input in form[formKey] %}
                            <div class="col-md-10 col-sm-12 col-lg-6">
                                <div class="row vertical-align attribute_metadata_row">
                                    <div class="pull-right"><nobr>{{ form_row(input.name) }} {{ form_row(input.value) }}</nobr></div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>