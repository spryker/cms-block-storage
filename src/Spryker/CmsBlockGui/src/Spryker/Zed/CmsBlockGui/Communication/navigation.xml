<?xml version="1.0"?>
<config>
    <cms-gui>
        <label>Content Management</label>
        <title>Content Management</title>
        <bundle>cms-block-gui</bundle>
        <controller>list-block</controller>
        <action>index</action>
        <icon>fa-files-o</icon>
        <pages>
            <block>
                <label>Blocks</label>
                <title>Blocks</title>
                <bundle>cms-block-gui</bundle>
                <controller>list-block</controller>
                <action>index</action>

                <pages>
                    <view-block>
                        <label>View CMS Block</label>
                        <title>View CMS Block</title>
                        <bundle>cms-block-gui</bundle>
                        <controller>view-block</controller>
                        <action>index</action>
                        <visible>0</visible>
                    </view-block>

                    <create-block>
                        <label>Create new CMS Block</label>
                        <title>Create new CMS Block</title>
                        <bundle>cms-block-gui</bundle>
                        <controller>create-block</controller>
                        <action>index</action>
                        <visible>0</visible>
                    </create-block>

                    <edit-block>
                        <label>Edit CMS Block</label>
                        <title>Edit CMS Block</title>
                        <bundle>cms-block-gui</bundle>
                        <controller>edit-block</controller>
                        <action>index</action>
                        <visible>0</visible>
                    </edit-block>

                    <edit-block-glossary>
                        <label>Edit CMS Block Glossary</label>
                        <title>Edit CMS Block Glossary</title>
                        <bundle>cms-block-gui</bundle>
                        <controller>edit-glossary</controller>
                        <action>index</action>
                        <visible>0</visible>
                    </edit-block-glossary>
                </pages>
            </block>

        </pages>
    </cms-gui>
</config>
