<div class="payment-method payment-subform braintree-form braintree-credit-card-form payment-form" id="braintreeCreditCard">
    <h3>Braintree CreditCard</h3>

    <div class="braintree">
        <div class="braintree-method braintree-credit-card-method" data-braintree-client-token="{{ child.vars.clientToken }}">
            <label for="braintree-credit-card-number">Card Number</label>
            <div class="field">
                <div id="braintree-credit-card-number" class="input"></div>
            </div>

            <label for="braintree-credit-card-cvv">CVV</label>
            <div class="field">
                <div id="braintree-credit-card-cvv" class="input"></div>
            </div>

            <label for="braintree-credit-card-expiration-date">Expiration Date</label>
            <div class="field">
                <div id="braintree-credit-card-expiration-date" class="input"></div>
            </div>

            <div class="braintree-error braintree-credit-card-error field"></div>
        </div>

        {{ form_errors(form.braintreeCreditCard) }}
        {{ form_widget(form.braintreeCreditCard) }}
    </div>
</div>
