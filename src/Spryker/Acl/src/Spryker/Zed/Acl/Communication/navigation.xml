<?xml version="1.0" encoding="UTF-8"?>
<config>
    <acl>
        <label>Users Control</label>
        <title>Users Control</title>
        <bundle>acl</bundle>
        <controller>index</controller>
        <action>index</action>
        <uri>/acl</uri>
        <icon>fa-users</icon>
        <pages>
            <roles>
                <label>Roles</label>
                <title>Roles</title>
                <bundle>acl</bundle>
                <controller>role</controller>
                <action>index</action>
                <icon>fa-user-secret</icon>
                <pages>
                    <roles>
                        <label>Create</label>
                        <title>Create</title>
                        <bundle>acl</bundle>
                        <controller>role</controller>
                        <action>create</action>
                        <visible>0</visible>
                    </roles>
                </pages>
            </roles>
            <groups>
                <label>Groups</label>
                <title>Groups</title>
                <bundle>acl</bundle>
                <controller>group</controller>
                <action>index</action>
                <icon>fa-users</icon>
            </groups>
        </pages>
    </acl>
</config>
