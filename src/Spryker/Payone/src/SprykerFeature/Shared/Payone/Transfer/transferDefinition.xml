           xsi:schemaLocation="http://xsd.spryker.com ../../src/Spryker/TransferObjectDefinitionSchema.xsd">

    <transfer name="PayoneAuthorization">
        <use name="SprykerFeature\Shared\Payone\Dependency\AuthorizationDataInterface" short="AuthorizationDataInterface" />

        <interface name="SprykerFeature\Shared\Payone\Dependency\AuthorizationDataInterface" short="AuthorizationDataInterface" />
