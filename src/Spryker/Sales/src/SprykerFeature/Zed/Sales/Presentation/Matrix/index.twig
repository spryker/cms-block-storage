{% extends '@Gui/Layout/layout.twig' %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' with { widget_title: 'Matrix' } %}

        {% block widget_content %}

            <table class="table">
                <thead>
                {% for row in matrix | slice(0, 1) %}
                    <tr>
                        {% for element in row %}
                            <th>
                                {{ element | raw }}
                            </th>
                        {% endfor %}
                    </tr>
                {% endfor %}
                </thead>
                <tbody>
                {% for row in matrix | slice(1) %}
                    <tr>
                    {% for element in row %}
                        <td>
                        {{ element | raw }}
                        </td>
                    {% endfor %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        {% endblock %}

    {% endembed %}

{% endblock %}
