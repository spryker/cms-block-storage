<div class="payment-subform ratepay-form ratepay-installment-form payment-form small-12 medium-9 large-6" id="ratepayInstallment">

    <div class="small-12 columns">
        <label>
            { 'payment.ratepay.date_of_birth' | trans }}
            {{ form_widget(form.ratepayInstallment.date_of_birth, { 'attr': {'placeholder': 'payment.ratepay.date_of_birth' | trans } }) }}
        </label>
        {{ form_errors(form.ratepayInstallment.date_of_birth) }}
    </div>
    <div class="small-12 columns">
        <label>
            {{ 'payment.ratepay.phone' | trans }}*
            {{ form_widget(form.ratepayInstallment.phone, { 'attr': {'placeholder': 'payment.ratepay.phone' | trans } }) }}
        </label>
        {{ form_errors(form.ratepayInstallment.phone) }}
    </div>

    <div class="small-12 columns">
        <label>
            {{ 'payment.ratepay.debit_pay_type' | trans }}*
            {{ form_widget(form.ratepayInstallment.debit_pay_type, { 'attr': {'placeholder': 'payment.ratepay.debit_pay_type' | trans } }) }}
        </label>
        {{ form_errors(form.ratepayInstallment.debit_pay_type) }}
    </div>

