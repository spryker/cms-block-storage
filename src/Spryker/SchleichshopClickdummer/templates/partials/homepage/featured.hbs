{{!-- height and width should be either 1 or 2 --}}
<a class="featured__link" href="{{url}}">
  <article class="featured featured--width-{{width}} featured--height-{{height}}" style="background-image: url('{{img}}')">
    <h1 class="featured__name">{{name}}</h1>
    <h2 class="featured__category">{{category}}</h2>
  </article>
</a>