<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:noNamespaceSchemaLocation="http://xsd.propelorm.org/1.6/database.xsd" namespace="Orm\Zed\SearchPage\Persistence" package="src.Orm.Zed.SearchPage.Persistence">

    <table name="spy_search_page_element" phpName="SpySearchPageElement">

        <column name="id_search_page_element" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="element_key" type="VARCHAR" required="true"/>
        <column name="is_element_active" type="BOOLEAN" required="true" default="false"/>
        <column name="fk_search_document_attribute" type="INTEGER" required="true"/>
        <column name="fk_search_page_element_template" type="INTEGER" required="true"/>

        <foreign-key name="spy_search_page_element-fk_search_document_attribute" foreignTable="spy_search_document_attribute" phpName="DocumentAttribute">
            <reference foreign="id_search_document_attribute" local="fk_search_document_attribute"/>
        </foreign-key>

        <foreign-key name="spy_search_page_element-fk_search_page_element_template" foreignTable="spy_search_page_element_template" phpName="ElementTemplate">
            <reference foreign="id_search_page_element_template" local="fk_search_page_element_template"/>
        </foreign-key>

        <unique name="spy_search_page_element-element_key">
            <unique-column name="element_key"/>
        </unique>

        <id-method-parameter value="spy_search_page_element_pk_seq"/>
    </table>

    <table name="spy_search_document_attribute" phpName="SpySearchDocumentAttribute">

        <column name="id_search_document_attribute" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="attribute_name" type="VARCHAR" required="true"/>
        <column name="attribute_type" type="VARCHAR" required="true"/>

        <unique name="spy_search_document_attribute-attribute_name">
            <unique-column name="attribute_name"/>
        </unique>

        <id-method-parameter value="spy_search_document_attribute_pk_seq"/>
    </table>

    <table name="spy_search_page_element_template" phpName="SpySearchPageElementTemplate">

        <column name="id_search_page_element_template" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="template_name" type="VARCHAR" required="true"/>

        <unique name="spy_search_page_element_template-template_name">
            <unique-column name="template_name"/>
        </unique>

        <id-method-parameter value="spy_search_page_element_template_pk_seq"/>
    </table>

</database>
