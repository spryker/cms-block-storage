#!/usr/bin/env php
<?php

foreach ([__DIR__ . '/../../../../../autoload.php', __DIR__ . '/../../../autoload.php'] as $file) {
    if (file_exists($file)) {
        define('SPRYKER_COMPOSER_INSTALL', $file);
        break;
    }
}

unset($file);

require_once SPRYKER_COMPOSER_INSTALL;

$bootstrap = new Spryker\Zed\Console\Communication\ConsoleBootstrap();
$bootstrap->run();
