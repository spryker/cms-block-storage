{% extends '@Gui/Layout/layout.twig' %}

{% if widget_title is not defined %}
    {% set widget_title = 'Product Add' | trans %}
{% endif %}

{% if submit_title is not defined %}
    {% set submit_title = 'Add' | trans %}
{% endif %}

{% if idProduct is not defined %}
    {% set idProduct = 0 %}
{% endif %}

{% block head_title -%}
    {{ widget_title | trans }} {% if idProduct > 0 %} [{{ idProduct }}] {% endif %}
{%- endblock %}
{% block section_title %}{{ widget_title }}{% endblock %}

{% block action %}
    {{ backActionButton('/product-management', 'List Products' | trans) }}
{% endblock %}

{% block content %}

    {{ form_start(form) }}

    {% embed '@Gui/Partials/widget.twig' with { widget_title: 'Product Specification' } %}

        {% block widget_content %}
            {{ form_errors(form) }}
<div class="tabs-container">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#tab_general" data-toggle="tab">General</a></li>
        <li class=""><a href="#tab_concrete" data-toggle="tab">Product Matrix</a></li>
        <li class=""><a href="#tab_attribute" data-toggle="tab">Attributes</a></li>
        <li class=""><a href="#tab_price_and_stock" data-toggle="tab">Default Price & Stock</a></li>
        <li class=""><a href="#tab_seo" data-toggle="tab">SEO</a></li>
    </ul>
    <div class="tab-content">
        {# ============================ GENERAL ============================ #}
        <div id="tab_general" class="tab-pane active">
            <div class="panel-body">
                <h3>Lorem ipsum sku name</h3>
                <p>Lorem ipsum locales, lorem sku and description</p>
            </div>

            <div class="panel-body">
                <div class="well">
                    {{ form_row(form.sku) }}

                    <div class="tabs-container">
                        <ul class="nav nav-tabs">
                        {% for locale,localizedAttributes in form.localized_attributes %}
                            {% set activeCss = '' %}
                            {% set invalidCss = '' %}

                            {% if currentLocale == locale %}
                                {% set activeCss =  'active' %}
                            {% endif %}

                            {% if errors.localized_attributes is defined %}
                                {% if locale in errors.localized_attributes|keys %}
                                    {% set invalidCss = 'invalid-tab' %}
                                {% endif %}
                            {% endif %}

                            <li class="{{ activeCss }} {{ invalidCss }}"><a href="#content_{{ locale }}" data-toggle="tab">{{ locale }}</a></li>
                        {% endfor %}
                        </ul>

                        <div class="tab-content">
                        {% for locale,localizedAttributes in form.localized_attributes %}
                            {% set active = '' %}
                            {% if currentLocale == locale %}
                                {% set active = 'active' %}
                            {% endif %}

                            <div id="content_{{ locale }}" class="tab-pane {{ active }}">
                                <div class="panel-body">
                                    <div class="well">
                                        {{ form_errors(localizedAttributes.name) }}
                                        {{ form_row(localizedAttributes.name) }}

                                        {{ form_errors(localizedAttributes.description) }}
                                        {{ form_row(localizedAttributes.description) }}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {# ============================ END ============================ #}

        {# ============================ CONRETE / MATRIX ============================ #}
        <div id="tab_concrete" class="tab-pane">
            <div class="panel-body">
                <h3>Manage product attributes and variants</h3>
                <p>Lorem ipsum attributes, lorem values ipusm variants.</p>
                <p><i>Note: Editing generated variants by adding or removing attributes, leads to the creation of new variants. Current configurations must be recreated.</i></p>

                <div class="panel-group" id="accordion">
                    <div class="panel panel-default collapsed">
                        <div class="panel-heading">
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                                <h5 class="panel-title ">
                                    Configure Products
                                    <div class="ibox-tools"><i class="fa fa-chevron-down"></i></div>
                                </h5>
                            </a>
                        </div>
                        <div id="collapseOne" class="panel-collapse collapse out">
                            <div class="panel-body">
                                <div class="tabs-container">
                                    <ul class="nav nav-tabs">
                                        <li class="active"><a href="#tab_conrete_attributes" data-toggle="tab">Attributes</a></li>
                                        <li class=""><a href="#tab_conrete_values" data-toggle="tab">Values</a></li>
                                        <li class=""><a href="#tab_conrete_variants" data-toggle="tab">Variants</a></li>
                                    </ul>
                                </div>
                                <div class="tab-content">
                                    <div id="tab_conrete_attributes" class="tab-pane active">
                                        <div class="panel-body">
                                            <p>Select attributes that will define your product.</p>
                                            <div class="well">
                                                <div class="row">
                                                    <div class="col-lg-4">
                                                        {% for type,attribute in form.attribute_group %}
                                                            {{ form_errors(attribute.value) }}
                                                            {{ form_row(attribute.value) }}
                                                        {% endfor %}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div id="tab_conrete_values" class="tab-pane">
                                        <div class="panel-body">
                                            <p>Select attributes and values that define the differences between your variants.</p>
                                            <div class="well">
                                                <div class="row">
                                                    <div class="col-lg-4">
                                                        {% for type,aValue in form.attribute_values %}
                                                            {{ form_errors(aValue.value) }}
                                                            {{ form_row(aValue.value) }}
                                                        {% endfor %}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div id="tab_conrete_variants" class="tab-pane">
                                        <div class="panel-body">
                                            variants
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel-body">
                {#<table
                        class="table table-striped table-bordered table-hover gui-table-data"
                        data-ajax="/product-category/edit/product-table?id-category=2"
                        id="product-table"
                        data-processing="true"
                        data-server-side="true"
                        data-state-save="true"
                        data-page-length="10"
                        data-order='[    ["0", "asc"]]'
                        data-columns='[
            null
        ,            null
        ,            null
        ,            null
        ]'
                        data-column-defs='[{"targets": "_all", "orderable": false }]'
                >
                    <thead>
                    <tr>
                        <th id="spy_product_abstract.id_product_abstract">
                            ID
                        </th>
                        <th id="spy_product_abstract.sku">
                            SKU
                        </th>
                        <th id="spy_product_abstract_localized_attributes.name">
                            Name
                        </th>
                        <th id="checkbox">
                            Selected
                        </th>
                    </tr>
                    </thead>
                    <tfoot><tr></tr>
                    </tfoot>
                </table>#}

                <div class="table-responsive">
                    <table
                        id="productMatrixTable"
                        class="table table-striped table-bordered table-hover gui-table-data"
                        data-page-size="4"
                        data-order='[["0", "asc"]]'
                        data-column-defs='[{ "targets": "no-sort", "orderable": false }]'
                        data-state-save="false"
                    >
                    <thead>
                    <tr>
                        <th>Sku</th>
                        {% set break1 = false %}
                        {% set columnCount = attributeGroupCollection|length %}
                        {% for product in concretes if not break1 %}
                            {% for attributeGroupKey,attributeGroupLabel in attributeGroupCollection %}
                                {% set break1 = true %}
                                <th>{{ attributeGroupLabel }}</th>
                            {% endfor %}
                        {% endfor %}
                        <th class="no-sort">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in concretes %}
                        <tr class="gradeX">
                            <td>{{ product.sku }}</td>
                            {#{% for attr in product.attributes %}#}
                            {% for attributeGroupKey,attributeGroupLabel in attributeGroupCollection %}
                                {% if product.attributes[attributeGroupKey] is defined %}
                                    <td>{{ product.attributes[attributeGroupKey] }}</td>
                                {% else %}
                                    <td>-</td>
                                {% endif %}
                            {% endfor %}
                            <td class="center no-sort">[activate]</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                    <tr>
                        <th>Sku</th>
                        {% set break1 = false %}
                        {% for product in concretes if not break1 %}
                            {% for attrName, attrValue in product.attributes %}
                                {% set break1 = true %}
                                <th>{{ attrName }}</th>
                            {% endfor %}
                        {% endfor %}
                        <th>Action</th>
                    </tr>
                    </tfoot>
                    </table>
                </div>
            </div>
        </div>
        {# ============================ END ============================ #}

        {# ============================ ATTRIBUTE ============================ #}
        <div id="tab_attribute" class="tab-pane">
            <div class="panel-body">

                attrubute

            </div>
        </div>
        {# ============================ END ============================ #}

        {# ============================ PRICE & STOCK ============================ #}
        <div id="tab_price_and_stock" class="tab-pane">
            {{ form_errors(form.price_and_stock) }}
            <div class="panel-body">
                <h3>Price & Tax</h3>
                <p>Assign default price and a tax rate and edit individually afterwards if necessary.</p>
                <div class="well">
                    {{ form_row(form.price_and_stock.price) }}
                    {{ form_row(form.price_and_stock.tax_rate) }}
                </div>
            </div>

            <div class="panel-body">
                <h3>Stock</h3>
                <p>Assign default stock and edit individually afterwards if necessary.</p>
                <div class="well">
                    {{ form_row(form.price_and_stock.stock) }}
                </div>
            </div>
        </div>
        {# ============================ END ============================ #}

        {# ============================ SEO ============================ #}
        <div id="tab_seo" class="tab-pane">
            {{ form_errors(form.seo) }}
            <div class="panel-body">
                <h3>Search Engine Optimization</h3>
                <p>Search engine optimization (SEO) is the process of affecting the visibility of a website or a web page in a web search engine's unpaid results — often referred to as "natural," "organic," or "earned" results.</p>
            </div>

            <div class="panel-body">
                <div class="well">
                    <h3>Meta Information</h3>
                    <p>Meta data are snippets of text describing a page’s content. The meta data appear only in the page’s code, not in its content.</p>

                    <div class="tabs-container">
                        <ul class="nav nav-tabs">
                            {% for locale,seoData in form.seo %}
                                {% set activeCss = '' %}
                                {% set invalidCss = '' %}

                                {% if currentLocale == locale %}
                                    {% set activeCss =  'active' %}
                                {% endif %}

                                {% if errors.seo is defined %}
                                    {% if locale in errors.seo|keys %}
                                        {% set invalidCss = 'invalid-tab' %}
                                    {% endif %}
                                {% endif %}

                                <li class="{{ activeCss }} {{ invalidCss }}"><a href="#content_seo_{{ locale }}" data-toggle="tab">{{ locale }}</a></li>
                            {% endfor %}
                        </ul>

                        <div class="tab-content">
                            {% for locale,seoData in form.seo %}
                                {% set active = '' %}
                                {% if currentLocale == locale %}
                                    {% set active = 'active' %}
                                {% endif %}

                                <div id="content_seo_{{ locale }}" class="tab-pane {{ active }}">
                                    <div class="panel-body">
                                        <div class="well">
                                            {{ form_errors(seoData.meta_title) }}
                                            {{ form_row(seoData.meta_title) }}

                                            {{ form_errors(seoData.meta_keyword) }}
                                            {{ form_row(seoData.meta_keyword) }}

                                            {{ form_errors(seoData.meta_description) }}
                                            {{ form_row(seoData.meta_description) }}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {# ============================ END ============================ #}
    </div>
</div>

        {% endblock %}

    {% endembed %}

    <input type="submit" class="btn btn-primary" value="{{ submit_title | trans }}"/>

    {{ form_end(form) }}

{% endblock %}

{% block head_css %}
    {{ parent() }}
    <link rel="stylesheet" href="/assets/css/spryker-zed-productmanagement-main.css" />
{% endblock %}

{% block footer_js %}
    {{ parent() }}
    <script src="/assets/js/spryker-zed-productmanagement-main.js"></script>
{% endblock %}
