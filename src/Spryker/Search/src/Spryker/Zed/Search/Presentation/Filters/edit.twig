{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Edit Search and Filter Preferences' %}

{% block head_title widget_title | trans %}

{% block action %}
    {{ backActionButton('/search/filters', 'Back to Filters' | trans) }}
    <a href="#" class="btn-sm"><i class="fa fa-question-circle" aria-hidden="true"></i></a>
{% endblock %}

{% block content %}
    {% embed '@Gui/Partials/widget.twig' %}
        {% block widget_content %}

            {{ form_start(form) }}
                {{ form_widget(form) }}

                <input type="submit" class="btn btn-primary" value="{{ 'Save' | trans }}" />
            {{ form_end(form) }}

        {% endblock %}
    {% endembed %}
{% endblock %}
