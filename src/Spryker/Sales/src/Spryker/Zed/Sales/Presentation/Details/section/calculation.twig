<div class="row">
    <div class="col-md-6">

        {% embed '@Gui/Partials/widget.twig' with { widget_title: 'Calculation' } %}

            {% block widget_content %}

                <table class="footable table table-striped toggle-arrow-tiny">
                    <tbody>
                    {% for orderItem in order.items %}
                        <tr>
                            <th>{{ orderItem.name }}</th>
                            <td class="text-right">{{ orderItem.sumGrossPriceWithProductOptionAndDiscountAmounts | currency  }}</td>
                            <td>{{ 'gross price per item' | trans }}</td>
                        </tr>
                        {% for orderItemOption in orderItem.productOptions %}
                            <tr>
                                <td> + {{ orderItemOption.LabelOptionType }}</td>
                                <td class="text-right">{{ orderItemOption.sumGrossPrice | currency  }}</td>
                                <td>{{ 'option price' | trans }}</td>
                            </tr>
                        {% endfor %}
                        <tr>
                            <th>&nbsp;</th>
                            <td class="text-right">{{ orderItem.Quantity }} x {{ orderItem.unitGrossPriceWithProductOptionAndDiscountAmounts | currency  }}</td>
                        </tr>
                    {% endfor %}
                    <tr>
                        <th>{{ 'Sub total' | trans }}</th>
                        <td class="text-right">-</td>
                    </tr>
                    {% for expense in order.expenses %}
                    <tr>
                        <th>{{ expense.name }}</th>
                        <td class="text-right">{{ expense.unitGrossPriceWithDiscounts | currency  }}</td>
                    </tr>
                    {% endfor %}
                    <tr>
                        <th>{{ 'Grand total' | trans }}</th>
                        <td class="text-right">{{ order.totals.grandTotal|currency }}</td>
                    </tr>
                    </tbody>
                </table>

            {% endblock %}

        {% endembed %}

    </div>
</div>
