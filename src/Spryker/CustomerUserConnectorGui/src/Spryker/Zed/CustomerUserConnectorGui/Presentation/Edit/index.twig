
{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Edit customer-user connections for User #' ~ userTransfer.idUser   %}

{% block action %}
    {{ backActionButton('/user', 'List Users' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_content %}

            {{ form_start(form) }}

            {{ form_widget(form) }}

            {% include '@CustomerUserConnectorGui/Edit/Partial/available-customers.twig' with {'availableCustomers': availableCustomers} only %}
            {% include '@CustomerUserConnectorGui/Edit/Partial/assigned-customers.twig' with {'assignedCustomers': assignedCustomers} only %}

            <input type="submit" class="btn btn-primary" value="{{ 'Update' | trans }}" />

            {{ form_end(form) }}


        {% endblock %}

    {% endembed %}

{% endblock %}

{% block footer_js %}
    {{ parent() }}
    <script src="/assets/js/spryker-zed-customer-user-connector-gui-customer-user-connector.js"></script>
{% endblock %}
