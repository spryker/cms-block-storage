<?xml version="1.0"?>
<transfers xmlns="http://xsd.spryker.com"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://xsd.spryker.com ../../src/Spryker/TransferObjectDefinitionSchema.xsd">

    <transfer name="PayoneAuthorization">
        <use name="SprykerFeature\Shared\Payone\Transfer\PayoneAuthorizationDataInterface" short="PayoneAuthorizationDataInterface" />
        <use name="SprykerFeature\Shared\Library\TransferObject\AbstractTransfer" short="AbstractTransfer" />
        <interface name="PayoneAuthorizationDataInterface" short="PayoneAuthorizationDataInterface" />
        <property name="amount" type="int" default="null" />
        <property name="referenceId" type="string" default="" />
        <property name="order" type="string" default="Sales\Order" /><!-- requires sales package refactoring -->
        <!-- <property name="paymentFormData" type="string" default="" /> -->
    </transfer>

</transfers>