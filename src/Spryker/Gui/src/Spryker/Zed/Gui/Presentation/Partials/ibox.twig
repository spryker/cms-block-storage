{#
  Display collapsible ibox.

  Example usage:

    {% embed '@Gui/Partials/ibox.twig' with {'collapsed': true} %}
        {% block title %}
            Ibox title
        {% endblock %}
        {% block content %}
            Ibox content
        {% endblock %}
    {% endebbed %}
#}
<div class="ibox nested {% if collapsed is defined and collapsed == true %}collapsed{% endif %}">
    <div class="ibox-title">
        <h5>
            {% block title %}{% endblock %}
        </h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
        </div>
    </div>
    <div class="ibox-content">
        {% block content %}{% endblock %}
    </div>
</div>
