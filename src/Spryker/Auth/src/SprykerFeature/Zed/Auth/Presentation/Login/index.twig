{% extends '@Application/Layout/layout.twig' %}


{% block head_css %}
    <link rel="stylesheet" type="text/css" href="{{ staticPath('Auth/styles/bundle.css') }}">
{% endblock %}


{% block body_header %}{% endblock %}
{% block body_menu   %}{% endblock %}


{% block body_class %}spy-login{% endblock %}


{% block content %}
    <h1>Spryker</h1>
    <h2>Commerce Framework</h2>

    <section spy-app="spyForm">
        <spy-form model="{{ form }}" src="/auth/login/check">
            <div spy-input-text="field.username" options="{ placeholder : 'Username' }"></div>

            <div class="pw">
                <div spy-input-password="field.password" options="{ placeholder : 'Password' }"></div>

                <a class="button" href="/auth/password/reset">Forgot?</a>
            </div>

            <div class="spy-layout buttons">
                <button class="button" ng-disabled="!field.username.value ||Â !field.password.value || query" ng-click="update()">Login</button>
            </div>
        </spy-form>
    </section>
{% endblock %}
