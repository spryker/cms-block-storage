<?xml version="1.0"?>
<database name="zed"
          namespace="SprykerFeature\Zed\QueueDistributor\Persistence\Propel"
          namespaceAutoPackage="false"
          package="vendor.spryker.spryker.Bundles.QueueDistributor.src.SprykerFeature.Zed.QueueDistributor.Persistence.Propel"
          defaultIdMethod="native"
          defaultPhpNamingMethod="underscore"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://xsd.propelorm.org/1.6/database.xsd">

    <table name="spy_queue_item" phpName="SpyQueueItem">
        <column name="id_queue_item" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="touched" type="TIMESTAMP" required="true" />
        <column name="fk_item_type" type="integer" primaryKey="true" />

        <foreign-key foreignTable="spy_queue_item_type">
            <reference local="fk_item_type" foreign="id_queue_item_type" phpName="Type" refPhpName="Item"/>
        </foreign-key>

        <index>
            <index-column name="touched"/>
        </index>

        <index>
            <index-column name="item_event"/>
        </index>

    </table>

    <table name="spy_queue_receiver" phpName="SpyQueueReceiver">
        <column name="id_queue_receiver" required="true" type="INTEGER" autoIncrement="true" primaryKey="true" />
        <column name="key" type="VARCHAR" size="255" required="true"/>

        <unique>
            <unique-column name="key"/>
        </unique>

    </table>

    <table name="spy_queue_item_type" phpName="SpyQueueItemType">
        <column name="id_queue_item_type" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="key" type="VARCHAR" size="255" required="true" />
        <column name="last_distribution" required="true" type="TIMESTAMP"/>

        <unique>
            <unique-column name="key"/>
        </unique>

    </table>

</database>
