<div class="row">
    <div class="col-md-4">
        {% include '@Gui/Partials/Table/header.twig' with { table_title: 'Customer Data' } %}
        <div class="fix-height">
            <table class="footable table table-stripped toggle-arrow-tiny">
                <tr>
                    <td>Customer ID:</td>
                    <td>{{ orderDetails.fkCustomer }}</td>
                </tr>
                <tr>
                    <td>Email:</td>
                    <td>{{ orderDetails.email }}</td>
                </tr>
                <tr>
                    <td>Name:</td>
                    <td>{{ orderDetails.firstName ~ ' ' ~ orderDetails.lastName }}</td>
                </tr>
            </table>
        </div>
        <div class="text-center"><a class="btn btn-primary" target="_blank" href="/sales/edit/customer?id={{ idOrder }}">{{ 'View' | trans }}</a></div>
        {% include '@Gui/Partials/Table/footer.twig' %}
    </div>
    <div class="col-md-4">
        {% include '@Gui/Partials/Table/header.twig' with { table_title: 'Shipping Address' } %}
        <div class="fix-height">
            {{ shippingAddress.firstName }} {{ shippingAddress.lastName }}<br>
            {{ shippingAddress.address1 ~ ' ' ~ shippingAddress.address2 ~ ' ' ~ shippingAddress.address3 }}<br>
            {{ shippingAddress.zipCode }} {{ shippingAddress.city }}
        </div>
        <div class="text-center"><a class="btn btn-primary" target="_blank" href="/sales/edit/address?id={{ orderDetails.fkSalesOrderAddressShipping }}">{{ 'View' | trans }}</a></div>
        {% include '@Gui/Partials/Table/footer.twig' %}
    </div>
    <div class="col-md-4">
        {% include '@Gui/Partials/Table/header.twig' with { table_title: 'Billing Address' } %}
        <div class="fix-height">
            {{ billingAddress.firstName }} {{ billingAddress.lastName }}<br>
            {{ billingAddress.address1 ~ ' ' ~ billingAddress.address2 ~ ' ' ~ billingAddress.address3 }}<br>
            {{ billingAddress.zipCode }} {{ billingAddress.city }}
        </div>
        <div class="text-center"><a class="btn btn-primary" target="_blank" href="/sales/edit/address?id={{ orderDetails.fkSalesOrderAddressBilling }}">{{ 'View' | trans }}</a></div>
        {% include '@Gui/Partials/Table/footer.twig' %}
    </div>
</div>
