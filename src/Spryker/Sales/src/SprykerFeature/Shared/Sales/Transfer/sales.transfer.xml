<?xml version="1.0"?>
<transfers xmlns="http://xsd.spryker.com"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://xsd.spryker.com ../../src/Spryker/TransferObjectDefinitionSchema.xsd">


    <transfer name="SalesOrder">
        <interface name="SprykerFeature\Shared\Discount\Dependency\Transfer\DiscountableContainerInterface" />
        <property name="idSalesOrder" type="int" />
        <property name="fkSalesOrderAddressBilling" type="int" />
        <property name="fkSalesOrderAddressShipping" type="int" />
        <property name="fkCustomer" type="int" />
        <property name="email" type="string" />
        <property name="salutation" type="string" />
        <property name="lastName" type="string" />
        <property name="firstName" type="string" />
        <property name="incrementId" type="string" />
        <property name="billingAddress" type="SalesAddressTransfer[]" />
        <property name="shippingAddress" type="SalesAddressTransfer[]" />
        <property name="customer" type="CustomerCustomerTransfer[]" />
        <property name="items" type="SalesOrderItemTransfer[]"  singular="item" />
        <property name="payment" type="string" />
        <property name="couponCodes" type="array" singular="couponCode" />
        <property name="createdAt" type="string" />
        <property name="isTest" type="string" />
        <property name="discounts" type="CalculationDiscountTransfer[]" />
        <property name="totals" type="CalculationTotalsTransfer[]" />
        <property name="expenses" type="CalculationExpenseTransfer[]" singular="expense" />
        <property name="invoice" type="SalesInvoiceTransfer[]" />
    </transfer>

    <transfer name="SalesAddress">
        <property name="idSalesOrderAddress" type="int" />
        <property name="idCustomerAddress" type="int" />
        <property name="iso2Country" type="string" />
        <property name="region" type="string" />
        <property name="fkMiscCountry" type="int" />
        <property name="salutation" type="string" />
        <property name="firstName" type="string" />
        <property name="middleName" type="string" />
        <property name="lastName" type="string" />
        <property name="email" type="string" />
        <property name="address1" type="string" />
        <property name="address2" type="string" />
        <property name="address3" type="string" />
        <property name="company" type="string" />
        <property name="city" type="string" />
        <property name="zipCode" type="string" />
        <property name="poBox" type="string" />
        <property name="phone" type="string" />
        <property name="cellPhone" type="string" />
        <property name="description" type="string" />
    </transfer>
    <transfer name="SalesComment">
        <property name="idSalesOrderComment" type="int" />
        <property name="message" type="string" />
        <property name="username" type="string" />
        <property name="fkSalesOrder" type="int" />
        <property name="createdAt" type="string" />
        <property name="updatedAt" type="string" />
    </transfer>
    <transfer name="SalesDocument">
        <property name="header" type="string" />
        <property name="fileName" type="string" />
        <property name="filePath" type="string" />
    </transfer>
    <transfer name="SalesInvoice">
        <property name="invoiceNumber" type="string" />
        <property name="fkSalesOrder" type="int" />
        <property name="type" type="string" />
        <property name="createdAt" type="string" />
        <property name="hash" type="string" />
        <property name="customerId" type="string" />
    </transfer>
    <transfer name="SalesOrderItem">
        <interface name="SprykerFeature\Shared\Discount\Dependency\Transfer\DiscountableItemInterface" />

        <property name="idSalesOrderItem" type="int" />
        <property name="fkSalesOrder" type="int" />
        <property name="fkOmsOrderItemStatus" type="int" />
        <property name="name" type="string" />
        <property name="sku" type="string" />
        <property name="uniqueIdentifier" type="string" />
        <property name="grossPrice" type="string" />
        <property name="priceToPay" type="string" />
        <property name="taxPercentage" type="string" />
        <property name="quantity" type="int" />
        <property name="discounts" type="CalculationDiscountTransfer[]" singular="discount" />
        <property name="options" type="SalesOrderItemOptionTransfer[]" />
        <property name="expenses" type="CalculationExpenseTransfer[]" singular="expense" />
        <property name="unitGrossPrice" type="string" />
        <property name="unitPriceToPay" type="string" />
        <property name="variety" type="string" />
        <property name="status" type="SalesOrderItemStatusTransfer[]" />
    </transfer>

    <transfer name="SalesOrderItemOption">
        <interface name="SprykerFeature\Shared\Calculation\Dependency\Transfer\OptionItemInterface" />
        <interface name="SprykerFeature\Shared\Calculation\Dependency\Transfer\DiscountableInterface" />
        <property name="identifier" type="int" />
        <property name="name" type="string" />
        <property name="description" type="string" />
        <property name="grossPrice" type="int" />
        <property name="priceToPay" type="int" />
        <property name="taxPercentage" type="string" />
        <property name="type" type="string" />
        <property name="discounts" type="CalculationDiscountTransfer[]" singular="discount" />
    </transfer>

    <transfer name="SalesOrderItemStatus">
        <property name="idOmsOrderItemStatus" type="int" />
        <property name="name" type="string" />
        <property name="description" type="string" />
    </transfer>

    <transfer name="SalesStatemachineTrigger">
        <property name="eventName" type="string" />
        <property name="orderId" type="string" />
        <property name="references" type="array" />
        <property name="context" type="string" />
        <property name="observer" type="string" />
    </transfer>

    <transfer name="SalesPayment">
        <property name="method" type="string" />
        <property name="redirectUrl" type="string" />
        <property name="ccType" type="string" />
        <property name="ccNumber" type="string" />
        <property name="ccCardholder" type="string" />
        <property name="ccExpirationMonth" type="string" />
        <property name="ccExpirationYear" type="string" />
        <property name="ccVerification" type="string" />
        <property name="debitHolder" type="string" />
        <property name="debitAccountNumber" type="string" />
        <property name="debitBankCodeNumber" type="string" />
        <property name="debitInstitute" type="string" />
        <property name="pseudoCcNumber" type="string" />
        <property name="paymentData" type="string" />
        <property name="paymentDataClassName" type="string" />
    </transfer>

    <transfer name="SalesDiscountTotalItem">
        <interface name="SprykerFeature\Shared\Calculation\Dependency\Transfer\DiscountTotalItemInterface" />
        <property name="name" type="string" />
        <property name="discountType" type="string" />
        <property name="amount" type="int" />
        <property name="codes" type="array" singular="code" />
    </transfer>

    <transfer name="SalesRegularRedirectPaymentCancellation">
        <property name="orderId" type="string" />
    </transfer>

</transfers>

