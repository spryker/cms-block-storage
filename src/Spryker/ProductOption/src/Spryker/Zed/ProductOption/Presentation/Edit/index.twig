{% extends '@Gui/Layout/layout.twig' %}

{% block section_title 'Product option' | trans %}

{% block action %}
    {{ backActionButton('/product-option/list/index', 'Back to list' | trans) }}

    {% set redirectUrl = url('/product-option/edit/index/', {'id-product-option-group' :productOptionGroup.idProductOptionGroup }) %}
    {% if productOptionGroup.active == true  %}
        {{ removeActionButton(url('/product-option/index/toggle-active', {'id-product-option-group' : productOptionGroup.idProductOptionGroup, 'active': '0', 'redirect-url': redirectUrl}), 'Deactivate' | trans) }}
    {% else %}
        {{ viewActionButton(url('/product-option/index/toggle-active', {'id-product-option-group' : productOptionGroup.idProductOptionGroup, 'active': '1', 'redirect-url': redirectUrl}), 'Activate' | trans) }}
    {% endif %}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' with { widget_title: 'Edit product option' } %}

        {% block widget_content %}
            {% include '@ProductOption/_partial/tabs.twig' %}
        {% endblock %}

    {% endembed %}

{% endblock %}

{% block head_css %}
    {{ parent() }}
    <link rel="stylesheet" href="/assets/css/spryker-zed-product-option-main.css">
{% endblock %}

{% block footer_js %}
    {{ parent() }}
    <script src="/assets/js/spryker-zed-product-option-main.js"></script>
{% endblock %}

