<?xml version="1.0" encoding="utf-8"?>
<indexes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="../../../../../../../../../../src/Spryker/Shared/Search/File/elasticsearch_index_definition.xsd">

    <index name="foo">
        <settings>
            <number_of_shards>1</number_of_shards>
            <number_of_replicas>1</number_of_replicas>
            <analysis>
                <analyzer name="my_analyzer">
                    <type>standard</type>
                    <stopwords>_german_</stopwords>
                    <filter>standard</filter>
                    <filter>lowercase</filter>
                </analyzer>
            </analysis>
        </settings>
        <mapping name="page1">
            <property name="foo" analyzer="my_analyzer"/>
            <property name="bar">
                <properties>
                    <property name="baz"/>
                </properties>
            </property>
        </mapping>
        <mapping name="page2"/>
    </index>
</indexes>
