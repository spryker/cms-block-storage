<?xml version="1.0"?>
<transfers xmlns="http://xsd.spryker.com"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://static.spryker.com http://static.spryker.com/transfer-01.xsd" >

    <transfer name="Wishlist">
        <property name="idWishlist" type="integer" />
        <property name="fkCustomer" type="integer" />
        <property name="name" type="string" />
        <property name="items" type="WishlistItem[]" singular="item" />
    </transfer>

    <transfer name="WishlistItem">
        <property name="fkWishlist" type="integer" />
        <property name="fkProduct" type="integer" />
    </transfer>

    <transfer name="WishlistOverviewRequest">
        <property name="wishlist" type="Wishlist" />
        <property name="limit" type="int" />
        <property name="offset" type="int" />
        <property name="orderBy" type="string" />
        <property name="orderDirection" type="string" defalut="ASC" />
    </transfer>

</transfers>
