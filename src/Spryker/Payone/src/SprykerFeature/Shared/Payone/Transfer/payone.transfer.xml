<?xml version="1.0"?>
<transfers xmlns="http://xsd.spryker.com"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://xsd.spryker.com ../../src/Spryker/TransferObjectDefinitionSchema.xsd">

    <transfer name="PayoneAuthorization">
        <use name="SprykerFeature\Shared\Payone\Dependency\Transfer\AuthorizationDataInterface" />
        <use name="SprykerFeature\Shared\Payone\Dependency\Transfer\PaymentUserDataInterface" />
        <interface name="AuthorizationDataInterface" />
        <property name="amount" type="int" default="null" />
        <property name="referenceId" type="string" default="" />
        <property name="paymentMethod" type="string" default="" />
        <property name="paymentUserData" type="PaymentUserDataInterface" />
        <property name="order" type="string" default="" /> <!-- @todo: Order Interface here -->
    </transfer>

    <transfer name="PayoneCapture">
        <use name="SprykerFeature\Shared\Payone\Dependency\Transfer\CaptureDataInterface"/>
        <use name="SprykerFeature\Shared\Payone\Dependency\Transfer\PaymentInterface"/>
        <interface name="CaptureDataInterface" />
        <property name="amount" type="int" default="null" />
        <property name="payment" type="PaymentInterface" />
    </transfer>

    <transfer name="PayoneDebit">
        <use name="SprykerFeature\Shared\Payone\Dependency\Transfer\DebitDataInterface"/>
        <use name="SprykerFeature\Shared\Payone\Dependency\Transfer\PaymentInterface"/>
        <interface name="DebitDataInterface" />
        <property name="amount" type="int" default="null" />
        <property name="payment" type="PaymentInterface" />
    </transfer>

    <transfer name="PayoneRefund">
        <use name="SprykerFeature\Shared\Payone\Dependency\Transfer\RefundDataInterface"/>
        <use name="SprykerFeature\Shared\Payone\Dependency\Transfer\PaymentInterface"/>
        <interface name="RefundDataInterface" />
        <property name="amount" type="int" default="null" />
        <property name="payment" type="PaymentInterface" />
    </transfer>

    <transfer name="PayonePayment">
        <use name="SprykerFeature\Shared\Payone\Dependency\Transfer\PaymentInterface"/>
        <interface name="PaymentInterface" />
        <property name="paymentMethod" type="string" default="null" />
        <property name="authorizationType" type="string" default="null" />
        <property name="transactionId" type="string" default="null" />
    </transfer>

    <transfer name="PayoneStandardParameter">
        <use name="SprykerFeature\Shared\Payone\Dependency\Transfer\StandardParameterInterface" />
        <interface name="StandardParameterInterface" />
        <property name="encoding" type="string" default="null" />
        <property name="mid" type="string" default="null" />
        <property name="aid" type="string" default="null" />
        <property name="portalId" type="string" default="null" />
        <property name="key" type="string" default="null" />
        <property name="paymentGatewayUrl" type="string" default="null" />
        <property name="currency" type="string" default="null" />
        <property name="language" type="string" default="null" />
        <property name="redirectSuccessUrl" type="string" default="null" />
        <property name="redirectBackUrl" type="string" default="null" />
        <property name="redirectErrorUrl" type="string" default="null" />
    </transfer>

    <transfer name="PayoneApiCallResponseCheck">
        <use name="SprykerFeature\Shared\Payone\Dependency\Transfer\ApiCallResponseCheckInterface" />
        <use name="SprykerFeature\Shared\Payone\Dependency\Transfer\PaymentInterface" />
        <interface name="ApiCallResponseCheckInterface" />
        <property name="requestType" type="string" default="null" />
        <property name="payment" type="PaymentInterface" />
    </transfer>

    <transfer name="PayoneAuthorizationCheckResponse">
        <use name="SprykerFeature\Shared\Payone\Dependency\Transfer\AuthorizationCheckResponseInterface" />
        <interface name="AuthorizationCheckResponseInterface" />
        <property name="isSuccess" type="boolean" default="false" />
        <property name="request" type="string" default="null" />
        <property name="status" type="string" default="null" />
        <property name="redirectUrl" type="string" default="null" />
        <property name="isRedirect" type="string" default="false" />
        <property name="internalErrorMessage" type="string" default="null" />
        <property name="customerErrorMessage" type="string" default="null" />
        <property name="errorCode" type="string" default="null" />
    </transfer>

</transfers>
