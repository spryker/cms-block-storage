<div class="row">
    <div class="col-md-4">


        {% embed '@Gui/Partials/widget.twig' with { widget_title: 'Customer data' } %}

            {% block widget_content %}

                <div class="fix-height">
                    <table class="footable table table-stripped toggle-arrow-tiny">
                        <tr>
                            <td>Customer ID:</td>
                            <td>{{ orderDetails.fkCustomer }}</td>
                        </tr>
                        <tr>
                            <td>Email:</td>
                            <td>{{ orderDetails.email }}</td>
                        </tr>
                        <tr>
                            <td>Name:</td>
                            <td>{{ orderDetails.firstName ~ ' ' ~ orderDetails.lastName }}</td>
                        </tr>
                    </table>
                </div>
                <div class="text-center"><a class="btn btn-primary" href="/sales/edit/customer?id-sales-order={{ idOrder }}">{{ 'Edit' | trans }}</a></div>

            {% endblock %}

        {% endembed %}
    </div>
    <div class="col-md-4">
        {% embed '@Gui/Partials/widget.twig' with { widget_title: 'Shipping address' } %}

            {% block widget_content %}

                <div class="fix-height">
                    {{ shippingAddress.firstName }} {{ shippingAddress.lastName }}<br>
                    {{ shippingAddress.address1 ~ ' ' ~ shippingAddress.address2 ~ ' ' ~ shippingAddress.address3 }}<br>
                    {{ shippingAddress.zipCode }} {{ shippingAddress.city }}
                </div>
                <div class="text-center"><a class="btn btn-primary" href="/sales/edit/address?id-sales-order={{ idOrder }}&id-address={{ orderDetails.fkSalesOrderAddressShipping }}">{{ 'Edit' | trans }}</a></div>

            {% endblock %}

        {% endembed %}
    </div>
    <div class="col-md-4">
        {% embed '@Gui/Partials/widget.twig' with { widget_title: 'Billing Address' } %}

            {% block widget_content %}

                <div class="fix-height">
                    {{ billingAddress.firstName }} {{ billingAddress.lastName }}<br>
                    {{ billingAddress.address1 ~ ' ' ~ billingAddress.address2 ~ ' ' ~ billingAddress.address3 }}<br>
                    {{ billingAddress.zipCode }} {{ billingAddress.city }}
                </div>
                <div class="text-center"><a class="btn btn-primary" href="/sales/edit/address?id-sales-order={{ idOrder }}&id-address={{ orderDetails.fkSalesOrderAddressBilling }}">{{ 'Edit' | trans }}</a></div>

            {% endblock %}

        {% endembed %}
    </div>
</div>
