<?xml version="1.0"?>
<transfers xmlns="http://xsd.spryker.com"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://xsd.spryker.com ../../src/Spryker/TransferObjectDefinitionSchema.xsd">

    <transfer name="OptionTypeCollection">
        <property name="optionType" type="OptionType[]" singular="optionType" />
    </transfer>

    <transfer name="OptionType">
        <property name="idOptionType" type="int" />
        <property name="businessKey" type="string" />
        <property name="taxSetKey" type="string" />
        <property name="optionValues" type="OptionValue[]" singular="optionValue" />
    </transfer>

    <transfer name="OptionValue">
        <property name="idOptionValue" type="int" />
        <property name="businessKey" type="string" />
        <property name="price" type="int" />
    </transfer>

    <transfer name="ProductOptionTypeCollection">
        <property name="productOptionTypes" type="ProductOptionType[]" singular="productOptionType" />
    </transfer>

    <transfer name="ProductOptionType">
        <property name="idProductOptionType" type="int" />
        <property name="idProduct" type="int" />
        <property name="isOptional" type="bool" />
        <property name="sequence" type="int" />
        <property name="optionType" type="OptionType" />
        <property name="productOptionTypeExclusions" type="ProductOptionTypeExclusion[]" singular="productOptionTypeExclusion" />
        <property name="productOptionValues" type="ProductOptionValue[]" singular="productOptionValue" />
    </transfer>

    <transfer name="ProductOptionValue">
        <property name="idProductOptionValue" type="int" />
        <property name="sequence" type="int" />
        <property name="optionValue" type="OptionValue" />
        <property name="productOptionValueConstraints" type="ProductOptionValueConstraint[]" singular="productOptionValueConstraint" />
    </transfer>

    <transfer name="ProductOptionTypeExclusion">
        <property name="idOptionTypeA" type="int" />
        <property name="idOptionTypeB" type="int" />
    </transfer>

    <transfer name="ProductOptionValueConstraint">
        <property name="idOptionValueA" type="int" />
        <property name="idOptionValueB" type="int" />
        <property name="operator" type="string" />
    </transfer>

    <transfer name="ConfigurationPresetCollection">
        <property name="configurationPresets" type="ConfigurationPreset[]" singular="configurationPreset" />
    </transfer>

    <transfer name="ConfigurationPreset">
        <property name="idConfigurationPreset" type="int" />
        <property name="idProduct" type="int" />
        <property name="isDefault" type="bool" />
        <property name="sequence" type="int" />
        <property name="optionValues" type="OptionValue[]" singular="optionValue" />
    </transfer>

</transfers>
