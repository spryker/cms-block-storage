            </label>
            {{ form_errors(form.ratepayInstallment.bank_account_bic) }}
        </div>
    </div>

    <h5>{{ 'payment.ratepay.installment_calculator' | trans }}</h5>
    <div class="small-12 columns">
        <label>
            {{ 'payment.ratepay.installment_calculator.type' | trans }}*
