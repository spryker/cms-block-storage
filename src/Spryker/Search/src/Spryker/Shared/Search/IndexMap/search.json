{
  "settings": {
    "index": {
      "number_of_shards": 1,
      "number_of_replicas": 1
    },
    "analysis": {
      "analyzer": {
        "lowercase_keyword_analyzer": {
          "tokenizer": "keyword",
          "filter": [
            "lowercase"
          ]
        },
        "suggestion_analyzer": {
          "tokenizer": "standard",
          "filter": [
            "lowercase"
          ]
        },
        "completion_analyzer": {
          "tokenizer": "keyword",
          "filter": [
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "page": {
      "dynamic_templates": [
        {
          "search-result-data": {
            "mapping": {
              "index": "no"
            },
            "path_match": "search-result-data.*"
          }
        },
        {
          "string_sort": {
            "mapping": {
              "analyzer": "lowercase_keyword_analyzer",
              "type": "string"
            },
            "path_match": "string-sort.*"
          }
        },
        {
          "integer_sort": {
            "mapping": {
              "index": "not_analyzed",
              "type": "integer"
            },
            "path_match": "integer-sort.*"
          }
        }
      ],
      "properties": {
        "search-result-data": {
          "type": "object",
          "include_in_all": false,
          "properties": {

          }
        },
        "type": {
          "type": "string",
          "include_in_all": false,
          "index": "not_analyzed"
        },
        "store": {
          "type": "string",
          "include_in_all": false,
          "index": "not_analyzed"
        },
        "locale": {
          "type": "string",
          "include_in_all": false,
          "index": "not_analyzed"
        },
        "full-text": {
          "type": "string",
          "include_in_all": false
        },
        "full-text-boosted": {
          "type": "string",
          "include_in_all": false
        },
        "string-facet": {
          "type": "nested",
          "include_in_all": false,
          "properties": {
            "facet-name": {
              "type": "string",
              "index": "not_analyzed"
            },
            "facet-value": {
              "type": "string",
              "index": "not_analyzed"
            }
          }
        },
        "integer-facet": {
          "type": "nested",
          "include_in_all": false,
          "properties": {
            "facet-name": {
              "type": "string",
              "index": "not_analyzed"
            },
            "facet-value": {
              "type": "integer"
            }
          }
        },
        "completion-terms": {
          "type": "string",
          "include_in_all": false,
          "analyzer": "completion_analyzer"
        },
        "suggestion-terms": {
          "type": "string",
          "include_in_all": false,
          "analyzer": "suggestion_analyzer"
        },
        "string-sort": {
          "type": "object",
          "include_in_all": false,
          "properties": {

          }
        },
        "integer-sort": {
          "type": "object",
          "include_in_all": false,
          "properties": {

          }
        },
        "category": {
          "type": "object",
          "include_in_all": false,
          "properties": {
            "direct-parents": {
              "type": "integer"
            },
            "all-parents": {
              "type": "integer"
            }
          }
        }
      }
    }
  }
}
