        <h5>{{ 'payment.ratepay.bank_account' | trans }}</h5>
        <div class="small-12 columns">
            <label>
                {{ 'payment.ratepay.bank_account.holder' | trans }}*
                {{ form_widget(form.ratepayInstallment.bank_account_holder, { 'attr': {'placeholder': 'payment.ratepay.bank_account.holder' | trans } }) }}
