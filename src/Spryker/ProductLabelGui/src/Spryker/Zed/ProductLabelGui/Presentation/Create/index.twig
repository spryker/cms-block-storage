{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Create a Product Label' %}
{% block section_title %}{{ widget_title }}{% endblock %}

{% block action %}
    {{ backActionButton('/product-label-gui', 'Back to Product Labels' | trans) }}
{% endblock %}

{% block content %}
    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_content %}

            {{ form_start(productLabelForm) }}
            {{ form_row(productLabelForm.name) }}
            {{ form_row(productLabelForm.isActive) }}
            {{ form_row(productLabelForm.isExclusive) }}
            {{ form_row(productLabelForm.validFrom) }}
            {{ form_row(productLabelForm.validTo) }}
            {{ form_row(productLabelForm.frontEndReference) }}

            <label class="control-label">{{ 'Translations' | trans }}</label>
            {% for localizedAttributes in productLabelForm.localizedAttributes %}
                {% set localeName = localizedAttributes.vars.value.getLocale().getLocaleName() %}

                {% embed '@Gui/Partials/localized-ibox.twig' with {
                    localeName: localeName,
                    collapsed: false
                } %}
                    {% block content %}
                        {{ form_errors(localizedAttributes) }}
                        {{ form_widget(localizedAttributes) }}
                    {% endblock %}
                {% endembed %}
            {% endfor %}

            <input id="navigation-save-btn" type="submit" class="btn btn-primary" value="{{ 'Save' | trans }}" />
            {{ form_end(productLabelForm) }}

        {% endblock %}

    {% endembed %}
{% endblock %}

{% block head_css %}
    {{ parent() }}
{% endblock %}

{% block footer_js %}
    {{ parent() }}
{% endblock %}

