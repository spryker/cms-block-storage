        </div>
        <div class="small-12 columns">
            <label>
                {{ 'payment.ratepay.bank_account.iban' | trans }}*
                {{ form_widget(form.ratepayInstallment.bank_account_iban, { 'attr': {'placeholder': 'payment.ratepay.bank_account.iban' | trans } }) }}
            </label>
            {{ form_errors(form.ratepayInstallment.bank_account_iban) }}
