<?xml version="1.0"?>
<transfers xmlns="http://xsd.spryker.com"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="https://static.spryker.com https://static.spryker.com/transfer-01.xsd" >

    <transfer name="Refund">
        <property name="idRefund" type="integer" />
        <property name="fkSalesOrder" type="integer" />
        <property name="amount" type="integer" />
        <property name="adjustmentFee" type="integer" />
        <property name="comment" type="string" />
        <property name="createdAt" type="string" />
        <property name="orderItems" singular="orderItem" type="RefundOrderItem[]" />
        <property name="expenses" singular="expense" type="RefundExpense[]" />
    </transfer>

    <transfer name="RefundOrderItem">
        <property name="idOrderItem" type="integer" />
        <property name="quantity" type="integer" />
    </transfer>

    <transfer name="RefundExpense">
        <property name="idExpense" type="integer" />
        <property name="quantity" type="integer" />
    </transfer>

    <transfer name="Order">
        <property name="idSalesOrder" type="int"/>
    </transfer>

    <transfer name="PaymentData">
        <property name="idPayment" type="int" />
        <property name="iban" type="string" />
        <property name="bic" type="string" />
    </transfer>

</transfers>
