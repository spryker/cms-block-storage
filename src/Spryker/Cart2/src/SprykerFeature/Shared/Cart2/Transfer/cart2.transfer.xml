<?xml version="1.0"?>
<transfers xmlns="http://xsd.spryker.com"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://xsd.spryker.com ../../src/Spryker/TransferObjectDefinitionSchema.xsd">

    <transfer name="Cart2Cart">
        <property name="items" type="Cart2Item[]" />
        <property name="totals" type="CalculationTotals[]" />
        <property name="expenses" type="CalculationExpense[]" />
        <property name="discounts" type="CalculationDiscount[]" />
        <property name="couponCodes" type="array" singular="couponCode" />
    </transfer>

    <transfer name="Cart2CartChange">
        <interface name="SprykerFeature\Shared\Cart2\Transfer\CartChangeInterface" />
        <property name="cart" type="string" />
        <property name="changedItems" type="string" />
    </transfer>

    <transfer name="Cart2Item">
        <interface name="SprykerFeature\Shared\Cart\Transfer\ItemInterface" />
        <property name="quantity" type="int" />
        <property name="id" type="int" />
        <property name="expenses" type="CalculationExpense[]" />
        <property name="options" type="array" />
        <property name="grossPrice" type="int" />
        <property name="priceToPay" type="int" />
        <property name="taxPercentage" type="int" />
        <property name="discounts" type="CalculationDiscount[]" />
    </transfer>

    <transfer name="Cart2Items">
        <property name="cartItems" type="Cart2Item[]" singular="cartItem" />
    </transfer>

</transfers>

