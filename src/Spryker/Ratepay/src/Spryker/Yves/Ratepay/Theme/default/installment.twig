    <div class="ratepay-installment-calculation-type ratepay-installment-calculation-by-time">
        <div class="small-12 columns">
            <label>
                {{ 'payment.ratepay.installment_calculator.month_allowed' | trans }}*
                {{ form_widget(form.ratepayInstallment.interest_month, { 'attr': {'placeholder': 'payment.ratepay.installment_calculator.installment_month' | trans } }) }}
            </label>
            {{ form_errors(form.ratepayInstallment.interest_month) }}
        </div>
    </div>
    <div class="ratepay-installment-calculation-type ratepay-installment-calculation-by-rate">
        <div class="small-12 columns">
            <label>
                {{ 'payment.ratepay.installment_calculator.interest_rate' | trans }}*
