<?xml version="1.0"?>
<transfers xmlns="http://xsd.spryker.com"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://xsd.spryker.com ../../src/Spryker/TransferObjectDefinitionSchema.xsd">

    <transfer name="CalculationExpenseTotals">
        <interface name="SprykerFeature\Shared\Calculation\Dependency\Transfer\ExpenseTotalsInterface" />
        <property name="totalOrderAmount" type="int" />
        <property name="totalItemAmount" type="int" />
        <property name="totalAmount" type="int" />
        <property name="expenseItems" type="CalculationExpenseTotalItemTransfer" singular="expenseItem" />

    </transfer>

    <transfer name="CalculationDiscount">
        <interface name="SprykerFeature\Shared\Discount\Dependency\Transfer\DiscountItemInterface" />
        <property name="displayName" type="string" />
        <property name="amount" type="int" />
        <property name="type" type="string" />
        <property name="action" type="string" />
        <property name="scope" type="string" />
        <property name="usedCodes" type="array" singular="usedCode" />
    </transfer>

    <transfer name="CalculationDiscountTotals">
        <interface name="SprykerFeature\Shared\Calculation\Dependency\Transfer\DiscountTotalsInterface" />
        <property name="totalAmount" type="int" />
        <property name="discountItems" type="SalesDiscountTotalItemTransfer[]" singular="discountItem" />
    </transfer>

    <transfer name="CalculationExpense">
        <interface name="SprykerFeature\Shared\Calculation\Dependency\Transfer\ExpenseItemInterface" />
        <interface name="SprykerFeature\Shared\Discount\Dependency\Transfer\DiscountableExpenseInterface" />
        <property name="type" type="string" />
        <property name="grossPrice" type="string" />
        <property name="priceToPay" type="string" />
        <property name="taxPercentage" type="string" />
        <property name="name" type="string" />
        <property name="discounts" type="CalculationDiscountTransfer[]" singular="discountItem" />
    </transfer>

    <transfer name="CalculationExpenseTotalItem">
        <interface name="SprykerFeature\Shared\Calculation\Dependency\Transfer\ExpenseTotalItemInterface" />
        <property name="name" type="string" />
        <property name="type" type="string" />
        <property name="grossPrice" type="int" />
        <property name="priceToPay" type="int" />
    </transfer>

    <transfer name="CalculationTax">
        <interface name="SprykerFeature\Shared\Calculation\Dependency\Transfer\TaxInterface" />
        <property name="totalAmount" type="int" />
        <property name="taxRates" type="CalculationTaxItemTransfer[]" singular="taxRate" />
    </transfer>

    <transfer name="CalculationTaxItem">
        <interface name="SprykerFeature\Shared\Calculation\Dependency\Transfer\TaxItemInterface" />

        <property name="percentage" type="string" />
        <property name="amount" type="int" />
    </transfer>

    <transfer name="CalculationTotals">
        <interface name="SprykerFeature\Shared\Calculation\Dependency\Transfer\TotalsInterface" />

        <property name="subtotal" type="int" />
        <property name="subtotalWithoutItemExpenses" type="int" />
        <property name="expenses" type="CalculationExpenseTotalsTransfer[]" />
        <property name="discount" type="CalculationDiscountTotalsTransfer[]" />
        <property name="tax" type="CalculationTaxTransfer[]" />
        <property name="grandTotalWithDiscounts" type="int" />
        <property name="grandTotal" type="int" />
    </transfer>

</transfers>

