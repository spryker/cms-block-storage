<?xml version="1.0" encoding="utf-8"?>
<statemachine
        xmlns="http://static.spryker.com"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://static.spryker.com http://static.spryker.com/oms-01.xsd">

    <process name="Refund">
        <states>
            <state name="ready for refund"/>
            <state name="refund succeeded"/>
        </states>

        <transitions>
            <transition condition="Braintree/IsRefundApproved">
                <source>ready for refund</source>
                <target>refund succeeded</target>
                <event>refund payment</event>
            </transition>
        </transitions>

        <events>
            <event name="refund payment" manual="true" onEnter="true" command="Braintree/Refund"/>
        </events>
    </process>
</statemachine>
